{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDirs": ["./examples", "./src", "./__fixtures__"],
    "target": "ES6",
    "jsx": "react",
    "paths": {
      "@/*": ["./*"],
    },
    "moduleResolution":"node",
    "module": "es6",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.tsx"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
